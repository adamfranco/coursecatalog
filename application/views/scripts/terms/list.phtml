<?php
$params = array(	'action'		=> 'view'
			);

while ($this->terms->hasNext()) {
	$term = $this->terms->getNextTerm();
	$params['term'] = AbstractCatalogController::getStringFromOsidId($term->getId());
	print "\n\t<h2><a href='".$this->url($params)."'>".$term->getDisplayName()."</a></h2>";
	print "\n\t<div>".$term->getDescription()."</div>";
}
